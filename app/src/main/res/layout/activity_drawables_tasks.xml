<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Drawables.DrawablesTasks"
    android:layout_gravity="center_horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_drawable_task"
            android:scaleType="fitCenter"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile_round"
            />
    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_marginLeft="115dp"
        android:layout_marginTop="50dp"
        android:id="@+id/username"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/outline_3p_24"
        android:hint="Username"
        android:background="@drawable/username_corner"
        android:drawablePadding="25dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_marginLeft="115dp"
        android:layout_marginTop="5dp"
        android:id="@+id/password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/outline_android_24"
        android:hint="Password"
        android:background="@drawable/username_corner"
        android:drawablePadding="25dp"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:id="@+id/login"


            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:id="@+id/signup"
            />
    </LinearLayout>
</LinearLayout>